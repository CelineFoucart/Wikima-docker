{% extends 'base.html.twig' %}

{% block title %} {{ timeline.title }} | Chronologie {% endblock %}

{% block body %}
    <header class="pt-4 bg-item header-item border-bottom">
        <div class="container-fluid">
            <div class="row border-bottom pb-4 pb-md-3 align-items-center">
                <div class="col-md-6">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
                            <li class="breadcrumb-item">
                                <a href="{{ path('app_timeline_index') }}">Chronologies</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">{{ timeline.title|capitalize }}</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-md-6">{{ include('includes/_search.html.twig') }}</div>
            </div>
            <div class="item-heading position-relative">
                <h1 class="mb-3">{{ timeline.title|capitalize }}</h1>
                <p class="lead mb-4">{{ timeline.description }}</p>
                <p>
                    {% for category in portal.categories %}
                        <a href="{{ path('app_category_show', {slug: category.slug}) }}" class="label mx-1">
                            <i class="bi bi-folder-fill me-1"></i>
                            {{ category.title }}
                        </a>
                    {% endfor %}
                </p>
            </div>
        </div>
    </header>

    <article class="my-5 container-fluid">
        <h2 class="list-title">Chronologie de {{ timeline.title|capitalize }}</h2>
        <aside>
            <span class="label-title">Portails : </span>
            {% for portal in article.portals %}
                {{ include('components/utils/_tag_link.html.twig', {item: portal, path: 'app_portal_show'}) }}
            {% endfor %}
        </aside>

        {% if timeline.event is empty %}
            <p class="text-center">Cette chronologie est vide.</p>
        {% else %}
            {% include "timeline/_events-container.html.twig" %}
        {% endif %}
    </article>
{% endblock %}
