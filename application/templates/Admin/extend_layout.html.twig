{% extends '@SonataAdmin/standard_layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="shortcut icon" href="/assets/favicon.png" type="image/png">
{% endblock %}

{% block sonata_head_title %}
    {% if _title is not empty %}
        {{ _title|striptags|raw }}
    {% else %}
        {% if action is defined %}
            {{ render_breadcrumbs_for_title(admin, action) }}
        {% endif %}
    {% endif %}
{% endblock %}

{% set dashboard_route = app.request.attributes.get('_route') %}

{% block side_bar_before_nav %}
    <ul class="sidebar-menu tree ">
        <li class="first treeview {{ dashboard_route == 'sonata_admin_dashboard' ? 'active' : '' }}">
            <a href="{{ path('sonata_admin_dashboard') }}">
                <i class="fa fa-tachometer" aria-hidden="true"></i>
                <span>Tableau de bord</span>
            </a>
        </li>
    </ul>
{% endblock %}

{% block side_bar_after_nav_content %}
    <ul class="sidebar-menu tree">     
        <li class="first treeview">
            <a href="{{ path('app_home') }}">
                <i class="fas fa-globe" aria-hidden="true"></i>
                <span>Index de {{ website_name() }}</span>
            </a>
        </li>

        <li class="treeview">
            <a href="{{ path('app_logout') }}"><i class="fas fa-sign-out-alt"></i> <span>DÃ©connexion</span></a>
        </li>
    </ul>
{% endblock %}