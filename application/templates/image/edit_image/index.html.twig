{% extends 'base.html.twig' %}

{% block title %}Gérer les images{% endblock %}

{% block body %}
    <header class="bg-default-light border-bottom">
        <div class="item-heading d-flex justify-content-between align-items-center">
            <h1 class="mb-1"><i class="bi bi-image me-1"></i> Gérer les images</h1>
            <a href="{{ path('app_edit_image_upload') }}" class="btn btn-outline-primary">
                Uploader
            </a>
        </div>
        <p class="text-muted lead mt-5 mb-4 text-center">Bienvenue sur cette page où vous allez pouvoir gérer les images et en uploader.</p>
    </header>

    <section class="mt-4 mb-3 container-fluid">
        <table class="table">
            <thead>
                <tr>
                    <th>{{ knp_pagination_sortable(images, 'Id', 'i.id') }}</th>
                    <th>{{ knp_pagination_sortable(images, 'Titre', 'i.title') }}</th>
                    <th>{{ knp_pagination_sortable(images, 'Slug', 'i.slug') }}</th>
                    <th>{{ knp_pagination_sortable(images, 'Fichier', 'i.filename') }}</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for image in images %}
                <tr>
                    <td>{{ image.id }}</td>
                    <td>{{ image.title }}</td>
                    <td>{{ image.slug }}</td>
                    <td>{{ image.filename }}</td>
                    <td>
                        <a href="{{ path('app_image_show', {slug: image.slug}) }}" class="btn btn-primary">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a href="{{ path('app_edit_image_edit', {'id': image.id}) }}" class="btn btn-success">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Aucun résultat</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation">
            {{ knp_pagination_render(images) }}
        </div>
    </section>
    
{% endblock %}
