{% extends 'base.html.twig' %}

{% block title %}{{ category.title }} | Catégorie {% endblock %}

{% block description %}{{ category.description }}{% endblock %}

{% block body %}
<header class="pt-4 pb-1 bg-item header-item">
    <div class="container">
        <div class="row border-bottom pb-4 pb-md-3 align-items-center">
            <div class="col-md-6">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
                        <li class="breadcrumb-item active" aria-current="page">{{ category.title|capitalize }}</li>
                    </ol>
                </nav>
            </div>
            <div class="col-md-6">{{ include('includes/_search.html.twig') }}</div>
        </div>
        <div class="item-heading position-relative">
            {% if is_granted('ROLE_EDITOR') or is_granted('ROLE_ADMIN') %}
                <div class="p-2 position-absolute top-0" style="right:-20px">
                    <a href="{{ path('app_edit_category_edit', {'id': category.id}) }}" class="btn btn-outline-secondary">
                        <i class="bi bi-pencil-fill"></i>
                    </a>
                </div>
            {% endif %}
            <h1 class="mb-3">{{ category.title|capitalize }}</h1>
            <p class="lead mb-3">{{ category.description }}</p>
        </div>
    </div>
</header>
<div class="container">
    <section class="row justify-content-between">
        <article class="col-md-7 p-4">
            <h2 class="list-title">Les articles de cette catégorie</h1>

            {{ include('components/layout/_single_col_list.html.twig',{path: 'app_article', items: articles}) }}

            <div class="navigation">
                {{ knp_pagination_render(articles) }}
            </div>
            
        </article>
        <aside class="col-md-4 aside">
            <h3 class="h4 mb-4">Portails de cette catégorie</h3>
            {{ include('components/layout/_tag_list.html.twig', {items: category.portals, path: 'app_portal'}) }}
        </aside>
    </section>
</div>
{% endblock %}
