{% extends 'base.html.twig' %}

{% block title %}{{ category.title }} | Catégorie {% endblock %}

{% block body %}
<header class="pt-4 pb-1 bg-item header-item">
    <div class="container">
        <div class="row border-bottom pb-4 pb-md-3 align-items-center">
            <div class="col-md-6">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
                        <li class="breadcrumb-item active" aria-current="page">{{ category.title }}</li>
                    </ol>
                </nav>
            </div>
            <div class="col-md-6">{{ include('includes/_search.html.twig') }}</div>
        </div>
        <div class="item-heading">
            <h1 class="mb-3">{{ category.title }}</h1>
            <p class="lead mb-3">{{ category.description }}</p>
        </div>
    </div>
</header>
<div class="container">
    <section class="row justify-content-between">
        <article class="col-md-7 p-4">
            <h2 class="list-title">Les articles de cette catégorie</h1>

            {% for article in articles %}
                {{ include('wiki/_article_link.html.twig') }}
            {% else %}
                <p class="text-center">Aucun article trouvé</p>
            {% endfor %}

            <div class="navigation">
                <nav aria-label="...">
                    <ul class="pagination">
                        <li class="page-item disabled">
                            <span class="page-link">Previous</span>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item active" aria-current="page">
                            <span class="page-link">2</span>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
            
        </article>
        <aside class="col-md-4 aside">
            <h3 class="h4 mb-4">Portails de cette catégorie</h3>
            <ul class="children-list">
                {% for portal in category.portals %}
                    <li>
                        <a href="{{ path('app_portal', {slug: portal.slug}) }}" class="label">
                            <i class="bi bi-tag-fill me-1"></i>
                            {{ portal.title }}
                        </a>
                    </li>
                {% else %}
                    <li>Aucun portail trouvé</li>
                {% endfor %}
            </ul>
        </aside>
    </section>
</div>
{% endblock %}
