<div class="row g-3">
    {% for image in images %}
        <div class="col-sm-6 col-lg-4 col-xl-3">
            <div class="image-container m-auto">
                <a href="{{ path('app_image_show', {slug: image.slug}) }}">
                    <img src="{{ vich_uploader_asset(image) }}" alt="{{ image.title }}">
                </a>
            </div>
        </div>
    {% else %}
        <div class="mt-4 text-muted text-center">Il n'y a aucune image dans cette section.</div>
    {% endfor %}
</div>