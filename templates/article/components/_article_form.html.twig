<section class="container-fluid my-4">
    
    {{ form_start(form) }}
        <div class="row">
            <div class="col-md-6">
                <h2 class="mb-2 text-muted h4">Corps de l'article</h2>
                <div class="border rounded-3 p-4">
                    {{ form_row(form.content) }}
                </div>
            </div>
            <div class="col-md-6">
                <h2 class="mb-2 text-muted h4">Informations sur l'article</h2>
                <div class="border rounded-3 p-4">
                    <div class="row">
                        <div class="col-md-6">{{ form_row(form.title) }}</div>
                        <div class="col-md-6">{{ form_row(form.keywords) }}</div>
                        <div class="col-md-12">{{ form_row(form.description) }}</div>
                    </div>
                    {{ form_row(form.portals) }}
                </div>
            </div>
            <div class="col-md-12 mt-3">
                <div class="border rounded-3 p-2">
                    <button class="btn btn-secondary">{{ button_label|default('Sauvegarder') }}</button>
                </div>
            </div>
        </div>
    {{ form_end(form) }}

</section>