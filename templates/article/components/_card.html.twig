<article class="card shadow-sm h-100">
    <div class="card-body">
        <h2 class="card-title h5 mb-3">
            <a href="{{ path('app_article', {slug: item.slug}) }}" class="text-decoration-none">
                {{ item.title|capitalize }}
            </a>
        </h2>
        <p class="card-text">{{ item.description }}</p>
    </div>
    <div class="card-footer text-muted">
        <span class="me-2">
            <i class="bi bi-person-fill me-1"></i>  Par {{ item.author.username }}
        </span>
        <span>
            <i class="bi bi-calendar3 me-1"></i> Le {{ item.createdAt|date('d/m/Y') }}
        </span>
    </div>
</article>